@model XuanHoang.Models.Product
@{ Layout = "_Layout"; ViewBag.Title = "Add Product";}
 
<h2>Add Product <a href="/product/index" class="btn btn-sm btn-secondary">Back</a></h2>
<form action="AddProduct" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" />
    </div>
    <div class="form-group">
        <label for="CategoryId">CategoryId:</label>
        <input class="form-control" name="CategoryId" />
    </div>
    <div class="form-group">
        <label for="Image">Image:</label>
        <input class="form-control" name="Image" />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input class="form-control" name="Price" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Status:</label>
        <select name="IsComplete" id="" required class="form-control">
            <option value="true">Active</option>
            <option value="false">Inactive</option>

        </select>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>
 
@if (Model != null)
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>CategoryId</th>
                <th>Image</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Description</td>
                <td>@Model.CategoryId</td>
                <td>@Model.Image</td>
                <td>@Model.Price</td>
                <td>@Model.Status</td>
            </tr>
        </tbody>
    </table>
}