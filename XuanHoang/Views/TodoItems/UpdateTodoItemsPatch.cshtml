@model XuanHoang.Models.TodoItem
@{ Layout = "_Layout"; ViewBag.Title = "Update a TodoItem";}
 
<h2>Update a TodoItem <a href="/todoitems/index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <input class="form-control" type="hidden" name="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="IsComplete">IsComplete</label>
        <select name="IsComplete" id="" required class="form-control">
            @if (@Model.IsComplete){
            <option value="true" selected>Active</option>
            <option value="false">Inactive</option>
            }else{
                <option value="true" >Active</option>
            <option value="false" selected>Inactive</option>
            }
            

        </select>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
 
@if (ViewBag.Result == "Success")
{
    <h2>TodoItem</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>IsComplete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.IsComplete</td>
            </tr>
        </tbody>
    </table>
}