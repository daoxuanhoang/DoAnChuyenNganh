@model XuanHoang.Models.Customers
@{ Layout = "_Layout"; ViewBag.Title = "Get Customer by Id";}
 
<h2>Get Customers by Id <a href="/customers/index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Customer</button>
    </div>
</form>
 
@if (Model != null)
{
    <h2>Customer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.Address</td>
                <td>@Model.Phone</td>
            </tr>
        </tbody>
    </table>
}