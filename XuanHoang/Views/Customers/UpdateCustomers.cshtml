@model XuanHoang.Models.Customers
@{ Layout = "_Layout"; ViewBag.Title = "Update a Customers";}
 
<h2>Update a Customers <a href="/customers/index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <input class="form-control" type="hidden" name="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" name="Description" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input class="form-control" name="Address" value="@Model.Address" />
    </div>
     <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" name="Address" value="@Model.Phone" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
 
@if (ViewBag.Result == "Success")
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.Address</td>
                 <td>@Model.Phone</td>
            </tr>
        </tbody>
    </table>
}